<h1>Eat Da Burger</h1>

<div id="pending-burg">
    <h3>Pending Burgers</h3>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
            <p>{{this.burger_name}}</p>
                <button data-burgerid="{{this.id}}" class="Btns">Devour!</button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div id="devoured">
    <h2>Devoured</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
            <p>{{this.burger_name}}</p>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>

<form id="new_burger">
    <div class="form-group">
        <label for="burger">Add a Burger!</label>
        <input type="text" id="burger" name="burger_name">
    </div>
    <button type="submit" class = "mt-3 btn-primary">Submit</button>
</form>